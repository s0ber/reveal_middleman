!!!5
/[if lt IE 7] <html class="no-js lt-ie9 lt-ie8 lt-ie7">
/[if IE 7] <html class="no-js lt-ie9 lt-ie8">
/[if IE 8] <html class="no-js lt-ie9">
%html.no-js
  %head
    %meta{charset: 'utf-8'}
    %meta{:content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}

    -# To set titles and descriptions globally and for each individual page, see /DOCS.md
    %title= page_title
    %meta{:content => page_description, :name => 'description'}
    %meta{:content => 'width=device-width', :name => 'viewport'}

    %meta{content: 'Sergey Shishkalov', name: 'author'}
    %meta{content: 'yes', name: 'apple-mobile-web-app-capable'}
    %meta{content: 'black-translucent', name: 'apple-mobile-web-app-status-bar-style'}
    %meta{content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no', name: 'viewport'}

    :javascript
      if (window.location.search.match( /print-pdf/gi )) {
        document.write('#{stylesheet_link_tag("print/pdf", media: "print")}');
      } else {
        document.write('#{stylesheet_link_tag("print/paper", media: "print")}');
      }

    = stylesheet_link_tag 'site'

    /[if lt IE 8]
      = javascript_include_tag 'lib/js/html5shiv.js'

  %body
    = yield
    = javascript_include_tag 'site'
